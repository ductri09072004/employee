@{
    ViewData["Title"] = "QL Table";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<style>
    .table-management-container {
        background-color: #f8f9fa;
        min-height: 100%;
        display: flex;
        flex-direction: column;
    }

    .add-table-button-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
        background-color: #fff;
        padding: 12px;
        width: fit-content;
        margin-left: auto;
        border-radius: 8px;
    }

    .add-table-button {
        background: none;
        border: none;
        color: #4267B2;
        font-size: 12px;
        cursor: pointer;
        padding: 0;
        display: flex;
        align-items: center;
        gap: 5px;
        font-weight: 400;
    }

    .add-table-button:hover {
        color: #3498db;
    }

    .add-icon {
        font-size: 12px;
    }

    .table-list-container {
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 20px;
        flex: 1;
    }

    .table-list {
        width: 100%;
        border-collapse: collapse;
        font-size: 12px;
        color: #696969;
    }

    .table-list th,
    .table-list td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #e9ecef;
    }

    .table-list th {
        background-color: #fff;
        color: #696969;
        font-weight: 700;
        font-size: 14px;
    }

    .table-list tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table-list tbody tr:last-child td {
        border-bottom: none;
    }

    .table-list td a {
        color: #696969;
        text-decoration: none;
    }

    .table-list td a:hover {
        text-decoration: underline;
    }

    .table-list .action-link {
        color: #4267B2;
        text-decoration: none;
        margin-right: 10px;
    }

    .table-list .action-link.delete {
        color: #B24242;
    }

    .table-list .action-link.upload {
        color: #137018;
    }

    .table-list .action-link:hover {
        text-decoration: underline;
    }

    .pagination-container {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 15px;
        padding: 10px 20px;
        background-color: #fff;
        border-radius: 8px; 
        margin-top: auto;
    }

    .pagination-label {
        font-size: 12px;
        color: #396897;
    }

    .items-per-page-select {
        padding: 8px 12px;
        border: 1px solid #e9ecef;
        border-radius: 6px;
        font-size: 12px;
        color: #2C3E50;
        background-color: #fff;
    }

    .pagination-info {
        font-size: 12px;
        color: #2C3E50;
    }

    .pagination-controls button {
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 6px;
        padding: 8px 12px;
        cursor: pointer;
        font-size: 12px;
        color: #2C3E50;
        transition: all 0.3s ease;
    }

    .pagination-controls button:hover:not(:disabled) {
        background-color: #3498db;
        color: #fff;
        border-color: #3498db;
    }

    .pagination-controls button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .pagination-controls span {
        margin: 0 5px;
        font-size: 12px;
        color: #2C3E50;
    }
</style>

<div class="table-management-container">
    <div class="add-table-button-container">
        <button class="add-table-button">
            <span class="add-icon">+</span> Thêm bàn
        </button>
    </div>

    <div class="table-list-container">
        <table class="table-list">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Bàn số</th>
                    <th>QR Code</th>
                    <th>Hành Động</th>
                    
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>01</td>
                    <td>Bàn 01</td>
                    <td><a href="http://localhost:5000/Restaurant?id_table=B01&id_restaurant=CHA1001" target="_blank">http://localhost:5000/Restaurant?id_table=B01&id_restaurant=CHA1001</a></td>
                    <td>
                        <a href="#" class="action-link upload">[Hiện]</a>
                        <a href="#" class="action-link">[Chỉnh sửa]</a>
                        <a href="#" class="action-link delete">[Xóa]</a>
                    </td>
                </tr>
                <tr>
                    <td>02</td>
                    <td>Bàn 01</td>
                    <td><a href="http://localhost:5000/Restaurant?id_table=B02&id_restaurant=CHA1001" target="_blank">http://localhost:5000/Restaurant?id_table=B02&id_restaurant=CHA1001</a></td>
                    <td>
                        <a href="#" class="action-link upload">[Hiện]</a>
                        <a href="#" class="action-link">[Chỉnh sửa]</a>
                        <a href="#" class="action-link delete">[Xóa]</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="pagination-container">
        <span class="pagination-label">Số hàng trên mỗi trang:</span>
        <select class="items-per-page-select">
            <option value="15">15</option>
            <option value="30">30</option>
            <option value="50">50</option>
        </select>
        <span class="pagination-info">1 - 15/61</span>
        <div class="pagination-controls">
            <button>&lt;&lt;</button>
            <button>&lt;</button>
            <button>&gt;</button>
            <button>&gt;&gt;</button>
        </div>
    </div>
</div>
