@{
    ViewData["Title"] = "QL Order";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<style>
    .order-management-container {
        background-color: #fff; @* f9f9f9 *@
    }

    .section-title {
        font-size: 20px;
        font-weight: bold;
        color: #4A4A4A;
        padding: 32px 32px 0px 32px;
    }

    .order-cards-grid {
        display: flex;
        flex-direction: row;
        gap: 12px;
        padding: 32px;
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
        scrollbar-width: thin;
        scrollbar-color: #CBCBCB #f0f0f0;
    }

    .order-cards-grid::-webkit-scrollbar {
        height: 8px;
    }

    .order-cards-grid::-webkit-scrollbar-track {
        background: #f0f0f0;
        border-radius: 4px;
    }

    .order-cards-grid::-webkit-scrollbar-thumb {
        background: #CBCBCB;
        border-radius: 4px;
    }

    .order-cards-grid::-webkit-scrollbar-thumb:hover {
        background: #999;
    }

                   .order-card {
          background-color: #fff;
          border: 1px solid #CBCBCB;
          border-radius: 16px;
          padding: 12px;
          max-width: 320px;
          min-width: 220px;
          max-height: 340px;
          min-height: 280px;
          display: flex;
          flex-direction: column;
          flex-shrink: 0;
          overflow-y: auto;
          overflow-x: hidden;
          scrollbar-width: thin;
          scrollbar-color: #CBCBCB #f0f0f0;
      }

      .order-card::-webkit-scrollbar {
          width: 6px;
      }

      .order-card::-webkit-scrollbar-track {
          background: #f0f0f0;
          border-radius: 3px;
      }

      .order-card::-webkit-scrollbar-thumb {
          background: #CBCBCB;
          border-radius: 3px;
      }

      .order-card::-webkit-scrollbar-thumb:hover {
          background: #999;
      }

    .card-header {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
    }

     .card-header-1 {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: #3F3D56;
       
    }

    .card-time {
        font-size: 14px;
        color: #3D7D6E;
    }

    .card-info {
        font-size: 14px;
        color: #3F3D56;
        margin-bottom: 5px;
    }

    .card-status {
        color: #EB455F; 
        font-weight: w400;
    }

                   .order-items-table {
          width: 100%;
          border-collapse: collapse;
          margin-top: 15px;
          margin-bottom: 30px;
          font-size: 14px;
          table-layout: fixed;
      }

      /* Định nghĩa độ rộng cho từng cột */
      .order-items-table th:nth-child(1),
      .order-items-table td:nth-child(1) {
          width: 35%; /* Món ăn */
      }

      .order-items-table th:nth-child(2),
      .order-items-table td:nth-child(2) {
          width: 15%; /* Số lượng */
      }

      .order-items-table th:nth-child(3),
      .order-items-table td:nth-child(3) {
          width: 25%; /* Topping */
      }

      .order-items-table th:nth-child(4),
      .order-items-table td:nth-child(4) {
          width: 25%; /* Ghi chú */
      }

                   .order-items-table th,
      .order-items-table td {
          padding: 6px 4px;
          text-align: left;
          border-bottom: 1px solid #eee;
          word-wrap: break-word;
          overflow-wrap: break-word;
          white-space: normal;
          vertical-align: top;
      }

      /* Đặc biệt cho cột ghi chú */
      .order-items-table td:last-child {
          max-width: 120px;
          word-break: break-word;
      }

    .order-items-table th {
        color: #696969;
        font-weight: w700;
    }

    .order-items-table tr {
        color: #696969;
        font-weight: w400;
    }

    .order-actions {
        display: flex;
        gap: 12px;
        width: 100%;
        margin-top: auto;
        margin-bottom: 0;
    }

    .btn {
        padding: 10px;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.2s;
        flex: 1;
    }

    .btn-green {
        background-color: #3D7D6E;
        color: #fff;
        flex: 1;
        margin-bottom: 0;
    }

    .btn-green:hover {
        background-color: #218838;
    }

    .order-details-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        overflow: hidden; /* Ensures rounded corners apply to content */
    }


</style>

<div class="order-management-container">
    <p class="section-title">Hóa đơn đặt món đã duyệt</p>

    <div class="order-cards-grid">
        <!-- Dữ liệu sẽ được load từ JavaScript -->
    </div>

    <table class="order-details-table">        
         @await Component.InvokeAsync("Table", new { 
            columnNames = new List<string> { "STT","Mã đơn" ,"Bàn số", "Giờ đặt", "Tổng tiền",
                 "Thanh toán","Trạng thái" ,"Duyệt đơn" }, 
            tableBodyId = "orderHistoryBody" 
        })
    </table>
        @await Component.InvokeAsync("Pagination", new Components.Model.Pagination.PaginationComponentModel {
        CurrentPage = 1,
        TotalPages = 1,
        TotalItems = 1,
        ItemsPerPage = 15,
        PageAction = "onHistoryPageChange"
    })
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="~/js/logic/order.js"></script>
}