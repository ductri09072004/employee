<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Nhà Hàng JolliServe</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="JolliServe - Hệ thống quản lý nhà hàng toàn diện hàng đầu Việt Nam. Giải pháp quản lý menu, đơn hàng, bàn ăn và nhân viên hiệu quả." />
    <meta name="keywords" content="JolliServe, hệ thống quản lý nhà hàng, phần mềm nhà hàng, quản lý menu, quản lý đơn hàng, quản lý bàn ăn, restaurant management, nhà hàng Việt Nam" />
    <meta name="author" content="JolliServe" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Hệ Thống Quản Lý Nhà Hàng JolliServe" />
    <meta property="og:description" content="Giải pháp quản lý nhà hàng toàn diện - Quản lý menu, đơn hàng, bàn ăn và nhân viên hiệu quả" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://employee.jollicow.store/" />
    <meta property="og:site_name" content="JolliServe" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Hệ Thống Quản Lý Nhà Hàng JolliServe" />
    <meta name="twitter:description" content="Giải pháp quản lý nhà hàng toàn diện - Quản lý menu, đơn hàng, bàn ăn và nhân viên hiệu quả" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://employee.jollicow.store/" />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/png/logo_web_admin.png" />
    <link rel="apple-touch-icon" href="~/png/logo_web_admin.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pagination.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JOLICOW.styles.css" asp-append-version="true" />
    
    <!-- Google Analytics -->
    @await Html.PartialAsync("_GoogleAnalytics")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Start" asp-action="Landing">JOLLICOW</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Start" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Start" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - JOLICOW - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/common/loading.component.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
