            <script>
                const icon = document.getElementById('announcementIcon');
                const popupsContainer = document.getElementById('announcementPopupsContainer');
                const popupCount = 2; // Số lượng thông báo, cập nhật nếu thêm/xoá
                // Ẩn tất cả popup khi load
                for (let i = 0; i < popupCount; i++) {
                    document.getElementById('announcementPopup' + i).classList.remove('active');
                }
                icon.addEventListener('click', function(e) {
                    let anyActive = false;
                    for (let i = 0; i < popupCount; i++) {
                        const popup = document.getElementById('announcementPopup' + i);
                        if (popup.classList.contains('active')) anyActive = true;
                    }
                    if (anyActive) {
                        // Nếu đã có popup nào mở thì đóng hết
                        for (let i = 0; i < popupCount; i++) {
                            document.getElementById('announcementPopup' + i).classList.remove('active');
                        }
                    } else {
                        // Mở tất cả popup
                        for (let i = 0; i < popupCount; i++) {
                            document.getElementById('announcementPopup' + i).classList.add('active');
                        }
                    }
                    documentPopup.classList.remove('active');
                });
                // Đóng từng popup riêng
                document.querySelectorAll('.announcement-popup .close-btn').forEach(function(btn) {
                    btn.addEventListener('click', function() {
                        const idx = btn.getAttribute('data-close');
                        document.getElementById('announcementPopup' + idx).classList.remove('active');
                    });
                });
                // Đóng popup khi click ra ngoài popups
                document.addEventListener('mousedown', function(event) {
                    let clickedInside = false;
                    for (let i = 0; i < popupCount; i++) {
                        const popup = document.getElementById('announcementPopup' + i);
                        if (popup.classList.contains('active') && popup.contains(event.target)) {
                            clickedInside = true;
                        }
                    }
                    if (!clickedInside && !icon.contains(event.target)) {
                        for (let i = 0; i < popupCount; i++) {
                            document.getElementById('announcementPopup' + i).classList.remove('active');
                        }
                    }
                    if (documentPopup.classList.contains('active') && !documentPopup.contains(event.target) && !documentIcon.contains(event.target)) {
                        documentPopup.classList.remove('active');
                    }
                });
                // Xử lý popup tài liệu
                const documentIcon = document.getElementById('documentIcon');
                const documentPopup = document.getElementById('documentPopup');
                const closeDocument = document.getElementById('closeDocument');
                documentIcon.addEventListener('click', function(e) {
                    documentPopup.classList.toggle('active');
                    for (let i = 0; i < popupCount; i++) {
                        document.getElementById('announcementPopup' + i).classList.remove('active');
                    }
                });
                closeDocument.addEventListener('click', function() {
                    documentPopup.classList.remove('active');
                });
            </script>
